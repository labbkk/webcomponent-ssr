{
    "compilerOptions": {
        "target": "es2018",
        "allowSyntheticDefaultImports": true,
        "module": "esnext",
        "jsx": "preserve",
        "moduleResolution": "node",
        "lib": ["esnext.array", "esnext", "es2017", "dom"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "inlineSources": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        //"outDir": "./",
        "skipLibCheck": true,
        "experimentalDecorators": true
    },
    "include": [
        "custom_typings/**/*.ts",
        "src/**/*.ts"
    ],
    "exclude": [],
}